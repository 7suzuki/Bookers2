<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book',book:@book %>
    </div>
    <div class="offset-md-1">
    <div class="col-md-8">
      <h1>Books</h1>
       <table>
          <thead>
          　 <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
           　</tr>
          </thead>
          <tbody>
           <!--eachはtBodyの中にいれる-->
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
               <% end %>
       　　</tbody>
       </table>

    </div>
    </div>
  </div>
</div>
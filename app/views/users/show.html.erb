<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book',book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
       <table>
          <thead>
          　 <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
           　</tr>
          </thead>
          <tbody>
           <!--eachはtBodyの中にいれる-->
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
               <% end %>
       　　</tbody>
       </table>
    </div>
  </div>
</div>
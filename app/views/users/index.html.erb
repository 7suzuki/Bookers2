<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book',book:@book, user:@user %>
    </div>
    <div class="offset-md-1">
    <div class="col-md-8">
     <h1>Users</h1>
       <table>
          <thead>
          　 <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
           　</tr>
          </thead>
          <tbody>
           <!--eachはtBodyの中にいれる-->
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
               <% end %>
               <!--% end %>-->
       　　</tbody>
       </table>
    </div>
    </div>
  </div>
</div>
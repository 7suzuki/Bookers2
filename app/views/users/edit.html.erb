<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
<!--%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>-->
  <!--%= render "devise/shared/error_messages", resource: resource %>-->

  <label for = "inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "name" %><br>
  <label for = "inputImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %><br>
  <label for = "inputIntroduction">Introduction</label><br>
    <%= f.text_field :introduction %><br>
    <%= f.submit "Update User" %>

<% end %>

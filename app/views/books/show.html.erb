<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'book',book: @book, user: @user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <%= link_to @user.name, user_path(@user) %>
        
        <% if @book.user == current_user %>
          <%= link_to @book.title, edit_book_path(@book) %>
          <%= @book.body %>
        <% else %>
          <%= link_to @book.title, books_path %>
          <%= @book.body %>
        <% end %>
        
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
        <% end %>
    </div>
  </div>
</div>



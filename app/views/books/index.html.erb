<h1>User info</h1>

<!--詳細ページに画面遷移するボタン-->


<h1>New book</h1><!--投稿機能-->

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>


<h1>Books</h1>
    <table>
       <thead>
       　 <tr>
           <th>Title</th>
           <th>Opinion</th>
        　</tr>
       </thead>
       <tbody>
        <!--eachはtBodyの中にいれる-->
         <% @books.each do |book| %>
         <tr>
           <!--<td><!--%= user.image %></td>-->
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
         </tr>
            <% end %>
    　　</tbody>
    </table>



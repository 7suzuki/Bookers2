<h2>Editing Book</h2>
<%= form_with model: @book, url: book_path do |f| %>

  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Opinion</h4>
   <%= f.text_area :body %>
   
   <br>
   <%= f.submit 'Update Book' %>


<% end %>

 <%= link_to "Show", book_path(@book) %>
 <%= link_to "Back", books_path %>



